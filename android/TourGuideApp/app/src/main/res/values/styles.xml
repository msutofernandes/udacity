<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#455A64</item>
    </style>

    <style name="categories">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="image_where">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/categorie_where</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="image_do">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/categorie_what</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="image_rest">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/categorie_restaurants</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="image_parks">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/categorie_parks</item>
        <item name="android:padding">25dp</item>
    </style>

</resources>
